# labas/hi

# terminal emulator
super + Return
	alacritty

# program launcher
super + @space
	rofi -show drun -show-icons

# 
# Audio
#
XF86Audio{Raise,Lower}Volume
	pactl set-sink-volume 0 {+,-}5%

XF86AudioMute
	pactl set-sink-mute 0 toggle

XF86Audio{Next,Prev,Play}
	playerctl {next,previous,play-pause}

# Flameshot
Print
	flameshot gui

# Color picker
super + c
	xcolor -s clipboard

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

#
# bspwm hotkeys
#

# quit/restart bspwm
super + alt + {q,r}
	bspc {quit,wm -r}

# close and kill
super + {_,shift + }q
	bspc node -{c,k}

# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

# set the window state // bspc node -t {tiled,pseudo_tiled,floating,fullscreen}
super + Tab
	bspc node -t \~floating

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

# preselect the direction
super + ctrl + {Left,Down,Up,Right}
	bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + Escape
	bspc node -p cancel

# Expand/contract a window by moving one of its side outward/inward
super + alt + {Left,Down,Up,Right}
    STEP=20; SELECTION={1,2,3,4}; \
    bspc node -z $(echo "left -$STEP 0,bottom 0 $STEP,top 0 -$STEP,right $STEP 0" | cut -d',' -f$SELECTION) || \
    bspc node -z $(echo "right -$STEP 0,top 0 $STEP,bottom 0 -$STEP,left $STEP 0" | cut -d',' -f$SELECTION)

# move a window
super + {_,shift + }{Left,Down,Up,Right,a,s,w,d}
	bspc node -{f,s} {west,south,north,east,west,south,north,east}
	
